<?xml version="1.0" encoding="UTF-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
  <metadata>
    <id>Gplex.Tool</id>
    <version>0.0.1-preview2</version>
    <authors>GPLEX developers</authors>
    <description>Gardens Point Scanner Generator (GPLEX) binary and MSBuild targets for SDK-style projects</description>
  </metadata>
  <files>
    <!-- Placeholders indicating host project compatibility. The tools can be used in any .NET Framework (>4.7) and .NET Standard projects -->
    <file src="_._" target="lib/netstandard2.0/" />
    <file src="_._" target="lib/net472/" />

    <!-- Framework specific target that runs the real run target below on single target builds -->
    <file src="build/Gplex.Tool.props" target="build/netstandard2.0/Gplex.Tool.props" />
    <file src="build/Gplex.Tool.targets" target="build/netstandard2.0/Gplex.Tool.targets" />
    <file src="build/Gplex.Tool.props" target="build/net472/Gplex.Tool.props" />
    <file src="build/Gplex.Tool.targets" target="build/net472/Gplex.Tool.targets" />

    <!-- Outer build target that runs the real run target below once on cross targeting builds -->
    <file src="buildCrossTargeting\Gplex.Tool.props" target="buildCrossTargeting/Gplex.Tool.props" />
    <file src="buildCrossTargeting\Gplex.Tool.targets" target="buildCrossTargeting/Gplex.Tool.targets" />

    <!-- The target that actually runs the custom tool -->
    <file src="RunGplex.targets" target="tools" />

    <!-- The tool binaries. Note that the net472 binaries are included purely for distribution, they are not used by the build targets -->
    <file src="$publishdir$\net472\**\*" target="tools/net472/" />
    <file src="$publishdir$\net6.0\**\*" target="tools/net6.0/" />

    <file src="..\GPLEXcopyright.rtf" target="tools/net6.0/" />
    <file src="..\GPLEXcopyright.rtf" target="tools/net472/" />
  </files>
</package>
